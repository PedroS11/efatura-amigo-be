{
  "name": "efatura-amigo-be",
  "version": "0.1.0",
  "bin": {
    "efatura-amigo-be": "cdk/index.js"
  },
  "scripts": {
    "build": "node esbuild.config.mjs && tsc -noEmit --incremental",
    "watch": "tsc -w",
    "cdk": "cdk synth",
    "lint": "biome check src cdk",
    "lint:fix": "biome check --write src cdk",
    "prepare": "husky install",
    "test": "vitest run --config ./vitest.config.ts",
    "test:coverage": "vitest run --coverage --config ./vitest.config.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/aws-lambda": "^8.10.160",
    "@types/node": "22.7.9",
    "@vitest/coverage-v8": "^3.0.9",
    "aws-cdk": "2.1007.0",
    "esbuild": "^0.27.2",
    "globals": "^17.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.974.0",
    "@aws-sdk/client-sqs": "^3.974.0",
    "@aws-sdk/lib-dynamodb": "^3.974.0",
    "aws-cdk-lib": "2.186.0",
    "aws-sdk": "^2.1693.0",
    "axios": "^1.13.3",
    "constructs": "^10.0.0",
    "dotenv": "^17.2.3",
    "telegraf": "^4.16.3"
  }
}
