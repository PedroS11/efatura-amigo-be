{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022"
    ],
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": ["vitest/globals"]
  },
  "include": [
    "src/**/*",
    "cdk/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cdk.out"
  ],
  "typesRoot": [
    "node_modules/@types"
  ]
}
